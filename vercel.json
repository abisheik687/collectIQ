{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "api/ml.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/ml/(.*)",
            "dest": "/api/ml.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}