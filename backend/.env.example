# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api

# Database Configuration (Development - PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=collectiq
DB_USER=postgres
DB_PASSWORD=postgres
DB_DIALECT=postgres

# Database Configuration (Production - Render PostgreSQL)
# DATABASE_URL will be automatically provided by Render
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://collectiq:password@hostname.render.com:5432/collectiq
DB_SSL=true

# Redis Configuration (Production - Render Redis)
# REDIS_URL will be automatically provided by Render
# REDIS_URL=redis://hostname.render.com:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ML API Configuration
ML_API_URL=http://localhost:8000
# Production: https://collectiq-ml-api.onrender.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# Production: https://collectiq-frontend.onrender.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SLA Configuration (in hours)
DEFAULT_SLA_HOURS=48
ESCALATION_SLA_HOURS=72

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# External Services (Optional - Set in Render Dashboard)
# Email Service (SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# SMS Service (Twilio)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Google APIs (Optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
